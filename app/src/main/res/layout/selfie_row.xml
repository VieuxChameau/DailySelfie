<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:padding="5dp">
	<ImageView
			android:id="@+id/selfieThumbnail"
			android:layout_width="160dp"
			android:layout_height="120dp"
			android:contentDescription="@string/selfieThumbnail"
			/>

	<LinearLayout
			android:id="@+id/selfieDescription"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:layout_toRightOf="@id/selfieThumbnail"
			android:padding="10dp"
			>

		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:orientation="horizontal">
			<TextView
					android:id="@+id/selfieDayLabel"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/selfieDayLabel"
					android:singleLine="true"
					android:ellipsize="end"
					android:layout_marginRight="1dp"/>

			<TextView
					android:id="@+id/selfieDay"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:ellipsize="end"/>
		</LinearLayout>


		<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:orientation="horizontal">
			<TextView
					android:id="@+id/selfieHourLabel"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/selfieHourLabel"
					android:singleLine="true"
					android:ellipsize="end"
					android:layout_marginRight="1dp"/>

			<TextView
					android:id="@+id/selfieHour"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:singleLine="true"
					android:ellipsize="end"/>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>